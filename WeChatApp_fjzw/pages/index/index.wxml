    <view>test content</view>
</mp-dialog> -->
  <view class="page__hd">
    <view class="page__title">Tabbar</view>
    <view class="page__desc">类似小程序原生tabbar的组件，可用于自定义tabbar</view>
  </view>
  <mp-tabbar style="position:fixed;bottom:0;width:100%;left:0;right:0;" list="{{list}}" bindchange="tabChange">
  </mp-tabbar>

</view>