/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
}

swiper {
  height: 300rpx;
}
 
.list {
  width: 100%; 
  padding-bottom: 20rpx;
}

.list .item {
  width: 47%;
  display: inline-block;
  background: #fff;
  margin: 2% 0% 0% 2%;
  border-radius: 10rpx;
  /* cursor: pointer; */
}
 

.item .header {
  width: 100%; 
  text-align: center;
  position: relative;
  display: inline-block;
}

.item .header image {
  width: 80%;
  height: 300rpx;
  display: inline-block;
  margin: 5px 0px;
}
.item .body{
  width: 90%;
    padding: 0px 5%; 
    line-height: 60rpx;
    height: 70rpx;
    overflow: hidden;
    font-size: 28rpx;
} 
.item .floor {
  font-size: 28rpx;
  width: 90%;
  margin-top: 16rpx;
  padding: 0rpx 5%;
  line-height: 36rpx;
  height: 80rpx;
}
.floor .price{
  color: #EA4D13;
}
.floor .num {
  height: 40rpx;
  line-height: 40rpx;
  width: 40rpx; 
  text-align: center;
}

.floor image {  
  height: 40rpx;
  line-height: 40rpx;
  width: 40rpx; 
}