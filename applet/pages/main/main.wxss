/* pages/main/main.wxss */

.app {
    width: 100%;
    height: 1500rpx;
    background: #ee9ca7; /* fallback for old browsers */
    background: -webkit-linear-gradient(to top, #ffdde1, #ee9ca7); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to top, #ffdde1, #ee9ca7); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}

.head {
    height: 100rpx;
    /* background-color: #0f0; */
}

.body {
    padding: 50rpx 50rpx 10rpx 50rpx;
    text-align: center;
}

.body view {
    height: 200rpx;
    line-height: 200rpx;
    background-color: #fff;
    margin-bottom: 70rpx;
    border-radius: 50%;
    box-shadow: 10rpx 10rpx #ddd;
}

.body view text {
    font-size: 40rpx;
    font-weight: bolder;
}

.footer {
    width: 100%;
    height: 150rpx;
    bottom: 0;
    position: fixed;
    /* background-color: #ffffff */
}
